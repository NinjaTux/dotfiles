# iTerm conf
export TERM="xterm-256color"

# Editor
export EDITOR="nvim"
export VISUAL="code"

# Man Pages Color
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# ZSH
export ZDOTDIR=".config/zsh"
export HISTSIZE=32768
export HISTFILESIZE="${HISTSIZE}"
export HISTCONTROL='ignoreboth'

# US English and UTF-8
export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# PATH
export PATH=$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/local/opt/openjdk/bin:/usr/local/opt/gnu-sed/libexec/gnubin:$HOME/Library/Python/3.8/bin:$PATH

# tools
export ZSH=$HOME/.oh-my-zsh
export WGETRC=".config/wget/wgetrc"
export CURL_HOME=".config/curl"

# theme
ZSH_THEME="powerlevel10k/powerlevel10k"
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(history)
POWERLEVEL9K_SHORTEN_DIR_LENGTH=1
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor root line)
ZSH_HIGHLIGHT_PATTERNS=('rm -rf *' 'fg=white,bold,bg=red')
